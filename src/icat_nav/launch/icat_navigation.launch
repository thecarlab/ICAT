<launch>
    <!-- 是否打开rviz || Whether to open rviz -->
    <arg name="use_rviz" default="true"/>
    <arg name="nav_use_rotvel" default="true"/>
    <!-- 地图名 || Map name  my_map-->
    <arg name="map" default="my_map"/>
    <!-- MarkerArray node> -->
    <node name='send_mark' pkg="icat_nav" type="send_mark.py"/>
    <!-- 加载地图 || Load map -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find icat_nav)/maps/$(arg map).yaml"/>
    <!-- 导航核心组件move_base -->
    <include file="$(find icat_nav)/launch/library/move_base.launch">
        <arg name="nav_use_rotvel" value="$(arg nav_use_rotvel)"/>
    </include>
    <!-- RVIZ -->
    <include file="$(find icat_nav)/launch/view/view_navigate.launch" if="$(arg use_rviz)"/>
</launch>

